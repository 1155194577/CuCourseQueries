{
  "compilerOptions": {
    "target": "ES6", // or ESNext
    "module": "esnext", // This is fine if you're using ES modules
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true // Add this for better compatibility
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
